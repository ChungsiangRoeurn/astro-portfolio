---
import { employmentItems, aboutMe } from "@config";
import Layout from "../layouts/Layout.astro";
const employments = employmentItems;
import Section from "src/components/Section.astro";
const aboutme = aboutMe;
import "../styles/global.css";
---

<Layout class="min-h-[60vh] text-white relative">
  <Section text="My Story" href="timeline" class="max-w-screen-xl mx-auto">
    <div
      class="terminal-container rounded-xl overflow-hidden border border-gray-700 shadow-lg font-mono"
    >
      <div
        class="terminal-header p-4 flex items-center gap-2 border-b border-gray-700"
      >
        <div class="flex gap-2">
          <div
            class="w-3 h-3 rounded-full bg-red-500 hover:bg-red-400 cursor-pointer"
          >
          </div>
          <div
            class="w-3 h-3 rounded-full bg-yellow-500 hover:bg-yellow-400 cursor-pointer"
          >
          </div>
          <div
            class="w-3 h-3 rounded-full bg-green-500 hover:bg-green-400 cursor-pointer"
          >
          </div>
        </div>
        <span class="text-gray-400 text-sm ml-2">Terminal</span>
      </div>

      <div class="text-gray-100">
        {
          aboutme.map((item) => (
            <div class="p-4 rounded-lg transition-all">
              <h3 class="text-lg font-bold text-white mb-3 flex items-center">
                Who I Am <span class="text-yellow-500 font-bold ml-1">?</span>
              </h3>
              <p class="text-neutral-300">
                This is <span class="text-yellow-500">{item.name}</span>
                <span>{item.content}</span>
              </p>
            </div>
          ))
        }
      </div>
      <div
        class="command-line px-4 py-3 border-t border-gray-700 flex items-center"
      >
        <span class="text-purple-400">➜</span>
        <span class="text-yellow-400 ml-2">~</span>
        <span class="text-gray-300 ml-1 blink">_</span>
      </div>
    </div>
  </Section>

  <Section
    text="Employment History"
    href=""
    class="min-h-[80vh] text-white relative"
  >
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="space-y-12">
        {
          employments.map((employment) => (
            <div class="group relative p-6 rounded-lg transition-all duration-300 border-t-4 border-[#F5D0A9]/30 hover:border-[#F5D0A9]/50">
              <div class="flex flex-col sm:flex-row sm:items-baseline justify-between gap-2 mb-3">
                <h3 class="text-xl font-bold text-white group-hover:text-[#F5D0A9] transition-colors duration-200">
                  {employment.role}
                </h3>
                <span class="text-sm text-neutral-400 font-mono">
                  {employment.duration}
                </span>
              </div>

              <p class="text-[#F5D0A9] font-medium text-sm sm:text-base mb-4 flex items-center">
                <svg
                  class="w-4 h-4 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                    clip-rule="evenodd"
                  />
                </svg>
                {employment.company}
              </p>

              <p class="text-neutral-300 mb-6 leading-relaxed">
                {employment.description}
              </p>

              {employment.responsibilities && (
                <ul class="space-y-3 mb-6">
                  {employment.responsibilities.map((item) => (
                    <li class="flex items-start">
                      <span class="text-[#F5D0A9] mr-3 mt-1 flex-shrink-0 text-lg leading-none">
                        •
                      </span>
                      <span class="text-neutral-300">{item}</span>
                    </li>
                  ))}
                </ul>
              )}
              {employment.technologies && (
                <div class="mt-8 flex flex-wrap gap-3">
                  {employment.technologies.map((tech) => (
                    <span class="bg-[#F5D0A9]/10 text-[#F5D0A9] cursor-pointer text-xs px-3 py-1.5 rounded-full hover:bg-[#F5D0A9]/20 transition-all duration-200 flex items-center">
                      {tech}
                    </span>
                  ))}
                </div>
              )}
            </div>
          ))
        }
      </div>
    </div>
  </Section>
</Layout>
