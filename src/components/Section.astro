---
interface Props {
  text: string;
  href: string;
  class?: string;
}

const { text, href, class: className } = Astro.props;
const sectionId = href.startsWith("#") ? href.slice(1) : href;
---

<section id={sectionId} class={`pb-10 ${className || ""}`}>
  <h2
    class="text-3xl text-center md:text-start md:text-5xl font-serif font-bold tracking-tighter text-white my-12"
  >
    {text}
  </h2>
  <slot />
</section>
