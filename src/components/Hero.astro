---
import type { HeroProps } from "../types";
import AnimatedText from "./AnimatedText.astro";

interface Props extends HeroProps {}

const { name, specialty, summary, email } = Astro.props;
---

<section class="min-h-[85vh] flex flex-col justify-start pt-32 relative">
  <div class="animate-slide-in-left" style="animation-delay: 0.2s">
    <h1 class="text-5xl md:text-7xl font-bold text-white mb-4 relative">
      {name}
      <span class="absolute -top-4 -right-4 w-8 h-8 bg-primary rounded-full animate-pulse-glow"></span>
    </h1>
    <h2 class="text-3xl md:text-4xl font-bold text-primary mb-8 group">
      <span class="inline-block animate-[flip_1s_ease-in-out] hover:animate-[flip_1s_ease-in-out]">{specialty}</span>
    </h2>
  </div>
  
  <div class="max-w-2xl animate-slide-in-right" style="animation-delay: 0.4s">
    <p class="text-neutral text-lg mb-8">{summary}</p>
    <div class="relative inline-block">
      <a
        href={`mailto:${email}`}
        class="inline-block bg-primary text-white px-8 py-4 rounded-lg font-medium cursor-pointer hover:bg-primary/80 transition-all duration-300 hover:translate-y-[-2px] hover:shadow-lg"
      >
        ¡Contáctame!
      </a>
      <div class="absolute inset-0 rounded-lg animate-pulse-glow pointer-events-none"></div>
    </div>
  </div>

  <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce-slow">
    <a href="#about" class="text-white opacity-50 hover:opacity-100 transition-opacity">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </a>
  </div>

  <div class="absolute top-20 right-20 w-32 h-32 bg-primary/20 rounded-full filter blur-3xl animate-pulse-glow"></div>
  <div class="absolute bottom-20 left-20 w-40 h-40 bg-primary/10 rounded-full filter blur-3xl animate-float"></div>
</section>
